{
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["."],
        "alias": {
          "@src": "./src",
          "@components": "./src/components",
          "@utils": "./src/utils",
          "@assets": "./assets",
          "@config": "./src/config",
          "@services": "./src/services",
          "@hooks": "./src/hooks",
          "@store": "./src/store",
          "@reduxActions": "./src/redux/actions"
        }
      }
    ],
    [
      "module:react-native-dotenv",
      {
        "moduleName": "@env",
        "path": ".env",
        "blacklist": null,
        "whitelist": null,
        "safe": false,
        "allowUndefined": true
      }
    ]
  ]
}
